# Firebase Configuration
# Obtén estos valores de tu consola de Firebase (Project Settings > Service Accounts)
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_firebase_app_id

# JWT Secret
# Genera un secreto fuerte para firmar los JWT (mínimo 32 caracteres)
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_chars

# Server Configuration
# Puerto en el que se ejecutará el servidor (default: 3000)
PORT=3000

# Optional: Node Environment (development/production)
NODE_ENV=development
